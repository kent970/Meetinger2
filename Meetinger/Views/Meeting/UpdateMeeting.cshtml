@model Meeting

@{
    ViewData["Title"] = "MyMeetings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Update your meeting</h1>
<div class="row">
    <form asp-action="UpdateMeetingTask" method="post" id="addPostForm">
        <div class="form-group">
            <label asp-for="MeetingTime"></label>
            <input asp-for="MeetingTime" class="form-control" value="@Model.MeetingTime" />
        </div>
        <div class="form-group">
            <label asp-for="EndTime"></label>
            <input asp-for="EndTime" class="form-control" value="@Model.EndTime" />
        </div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <textarea asp-for="Name" class="form-control">@Model.Name</textarea>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control">@Model.Description</textarea>
            <input asp-for="Id" type="hidden" value="@Model.Id" />
        </div>
        <div class="form-group">
            <label asp-for="AvailableUsers"></label>
            @foreach (var user in Model.AvailableUsers)
            {
                <div>
                    <input type="checkbox" class="form-check-input" id="@user.Id" name="selectedUsers" value="@user.Id">
                    <label class="form-check-label" for="@user.Id">@user.FirstName</label>
                </div>
            }
        </div>

        <button type="submit" id="submitPostBtn" class="btn btn-danger">Submit Meeting</button>
    </form>

</div>